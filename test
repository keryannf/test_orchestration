    <script>
        // Script pour un petit effet d'animation de statut
        const statuses = document.querySelectorAll('.ioc-status');
        const colors = {
            'ALERTE ROUGE': '#f85149',
            'COMPROMIS': '#f85149',
            'SURVEILLANCE': 'yellow'
        };

        statuses.forEach(status => {
            // Fait clignoter les statuts critiques
            if (status.textContent === 'ALERTE ROUGE' || status.textContent === 'COMPROMIS') {
                status.style.animation = 'blink 1.5s step-end infinite';
            }
        });
        
        // Ajout de l'animation CSS pour le clignotement des statuts critiques (à ajouter au <style>)
        const styleSheet = document.createElement("style");
        styleSheet.type = "text/css";
        styleSheet.innerText = `
            @keyframes blink {
                from, to { color: ${colors['ALERTE ROUGE']}; }
                50% { color: transparent; }
            }
        `;
        document.head.appendChild(styleSheet);
    </script>
